<template id="addCompany">
	<div>
		<h2>Add New Company</h2>
		<form v-on:submit="createCompany">
			<div class="form-group">
				<label for="add-name">Name:</label>
				<input class="form-control" id="add-name" v-model="Company.Name" required>
			</div>
			<div class="form-group">
				<label for="add-phone">Phone:</label>
				<input type="number" class="form-control" id="add-phone" v-model="company.phone" required>
			</div>
			<div class="form-group">
				<label for="add-address1">Street Address 1:</label>
				<input class="form-control" id="add-address1" v-model="company.address.streetAddress1" required>
			</div>
			<div class="form-group">
				<label for="add-address2">Street Address 2:</label>
				<input class="form-control" id=add-address2 v-model="company.address.streetAddress2">
			</div>
			<div class="form-group">
				<label for="add-region">Region:</label>
				<input class="form-control" id="add-region" v-model="company.address.region" required>
			</div>
			<div class="form-group">
				<label for="add-postcode">Postcode:</label>
				<input class="form-control" id="add-postcode" v-model="company.address.postCode" required>
			</div>
			<div class="form-group">
				<label for="add-country">Country:</label>
				<input class="form-control" id="add-country" v-model="company.address.country.name" required>
			</div>
			<div>
				<button type="submit">Add</button>
			</div>
		</form>
	</div>
</template>
